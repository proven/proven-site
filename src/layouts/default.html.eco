<!DOCTYPE html>
<html lange="en">
<head>
  <!-- Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @getPreparedTitle() %></title>
  <meta name="description" content="<%= @getPreparedDescription() %>" />
  <meta name="keywords" content="<%= @getPreparedKeywords() %>" />
  <meta name="author" content="<%= @site.author or '' %>" />
  <%- @getBlock('meta').toHTML() %>

  <!-- Icons -->
  <link rel="shortcut icon" href="/img/favicon.ico">
  <link rel="apple-touch-icon" href="/img/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="72x72" href="/img/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="114x114" href="/img/apple-touch-icon-114x114.png">

  <!-- Shims: IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
    <script async src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <!-- Styles -->
  <!-- Note that our style.css must come after bootstrap and before bootstrap-responsive, or else the navbar gets messed up -->
  <%- @getBlock('styles').add(["/vendor/bootstrap.css","/vendor/font-awesome.css","/vendor/bootstrap-responsive.css","/styles/style.css"]).toHTML() %>

  <!-- Scripts -->
  <!-- These *should* be below the body, but I want to use jQuery in inline scripts. -->
  <script src="/vendor/jquery.min.js"></script>
  <%- @getBlock('scripts').add(["/vendor/bootstrap.js","/scripts/script.js"]).toHTML() %>

</head>
<body>
  <!-- Markup -->
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <img class="brand-logo pull-left" src="/img/ciphershare-arrows.svg" />
        <a class="brand" href="/"><%= @getPreparedBrand() %></a>
        <ul class="nav">
          <% for document in @getCollection('documents').toJSON(): %>
            <% if document.meta.nav: %>
            <li typeof="sioc:Page" about="<%= document.url %>" class="<%= 'active'  if @document.url is document.url %>">
              <a href="<%= document.url %>" property="dc:title"><%= document.title %></a>
            </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">

    <section id="content" class="content">
      <%- @content %>
    </section>

    <footer>
      <p>&copy; Proven Security Solutions Inc.</p>
    </footer>

  </div><!-- /container -->

</body>
</html>
