mixin section(info)
  .row.section
    .span7.section-content
      h3.section-header= info.header

      .section-intro= info.intro
        a.more-info(href=info.more_info) Learn More

      .section-points

        each point in info.points
          .section-point
            i(class=point.icon)
            .section-point-title= point.title
            .section-point-content= point.content

    .span5.section-image
      a(href=info.image)
        img(src=info.image)


