:stylus

  .section
    margin-top: 2em
    font-size: 1.1em

  .section-intro
    margin-top: 1em

  .section-intro .more-info
    margin-left: 0.5em

  .section-points
    margin-top: 1em

  .section-point
    margin-top: 0.5em

  .section-point > i
    margin-right: 0.5em

  .section-point-title
    display: inline
    font-weight: bold
    margin-right: 0.5em

  .section-point-content
    display: inline

  .section-image
    margin-top: 1em

  .section-image img
    max-height: 25em


:coffeescript

  $ ->

    # Alternate content layout left-right
    $('.section-content').each (idx, item) ->
      if (idx % 2) == 0
        $(item).addClass 'pull-left'
      else
        $(item).addClass 'pull-right'

    $('.section-image').each (idx, item) ->
      if (idx % 2) == 0
        $(item).addClass 'pull-left'
      else
        $(item).addClass 'pull-right'
